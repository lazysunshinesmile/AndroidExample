<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <Button
        android:id="@+id/value_anim_ofint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="value_anim_of_int"
        />
    <Button
        android:id="@+id/value_anim_offloat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value_anim_of_float"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/value_anim_ofint"
        />
    <Button
        android:id="@+id/value_anim_of_obj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/value_anim_offloat"
        android:text="value_anim_of_obj"
        />
    <Button
        android:id="@+id/obj_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/value_anim_of_obj"
        android:text="obj anim"
        />
    <Button
        android:id="@+id/button_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/obj_anim"
        android:text="普通动画"
        />
    <Button
        android:id="@+id/other_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/button_first"
        android:layout_marginLeft="160dp"
        app:layout_constraintTop_toTopOf="@id/button_first"
        android:text="其他动画"
        />

    <Button
        android:id="@+id/path_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_first"
        android:text="path动画"
        />
    <com.example.animationstudy.RectView
        android:id="@+id/rect_view"
        android:layout_width="400dp"
        android:layout_height="800dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/path_anim"
        android:text="path动画"
        />





    <Button
        android:id="@+id/interpolator_typeevaluator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="插值器与估值器"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/path_anim" />
    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/interpolator_typeevaluator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/a1"
        />
</androidx.constraintlayout.widget.ConstraintLayout>